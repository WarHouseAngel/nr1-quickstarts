{
	"name": "SRE Golden Signals",
	"description": "",
	"pages": [
		{
			"name": "SRE Golden Signals",
			"description": "",
			"widgets": [
				{
					"visualization": {
						"id": "viz.billboard"
					},
					"layout": {
						"column": 1,
						"row": 1,
						"height": 3,
						"width": 2
					},
					"title": "Availability",
					"rawConfiguration": {
						"queries": [
							{
								"accountId": 0,
								"nrql": "FROM Transaction SELECT percentage(COUNT(*), WHERE error IS false) as '' since 1 week ago"
							}
						]
					}
				},
				{
					"visualization": {
						"id": "viz.bar"
					},
					"layout": {
						"column": 3,
						"row": 1,
						"height": 3,
						"width": 4
					},
					"title": "Availability per Microservices",
					"rawConfiguration": {
						"queries": [
							{
								"accountId": 0,
								"nrql": "FROM Transaction SELECT percentage(count(*), WHERE error is false) facet appName since 1 week ago"
							}
						]
					}
				},
				{
					"visualization": {
						"id": "viz.billboard"
					},
					"layout": {
						"column": 7,
						"row": 1,
						"height": 3,
						"width": 2
					},
					"title": "Latency (Percentile)",
					"rawConfiguration": {
						"queries": [
							{
								"accountId": 0,
								"nrql": "SELECT percentile(duration, 50, 90, 99) as 'sec' from Transaction "
							}
						]
					}
				},
				{
					"visualization": {
						"id": "viz.heatmap"
					},
					"layout": {
						"column": 9,
						"row": 1,
						"height": 3,
						"width": 4
					},
					"title": "Latency Histgram",
					"rawConfiguration": {
						"queries": [
							{
								"accountId": 0,
								"nrql": "SELECT histogram(duration, 5, 10) from Transaction facet request.uri since 1 week ago"
							}
						]
					}
				},
				{
					"visualization": {
						"id": "viz.line"
					},
					"layout": {
						"column": 1,
						"row": 4,
						"height": 3,
						"width": 3
					},
					"title": "Throughput",
					"rawConfiguration": {
						"queries": [
							{
								"accountId": 0,
								"nrql": "FROM Transaction SELECT rate(count(*), 1 minute) timeseries"
							}
						]
					}
				},
				{
					"visualization": {
						"id": "viz.line"
					},
					"layout": {
						"column": 4,
						"row": 4,
						"height": 3,
						"width": 3
					},
					"title": "Throughput per URI",
					"rawConfiguration": {
						"queries": [
							{
								"accountId": 0,
								"nrql": "FROM Transaction SELECT rate(count(*), 1 minute) facet request.uri timeseries"
							}
						]
					}
				},
				{
					"visualization": {
						"id": "viz.line"
					},
					"layout": {
						"column": 7,
						"row": 4,
						"height": 3,
						"width": 3
					},
					"title": "Error trend by app-service",
					"rawConfiguration": {
						"queries": [
							{
								"accountId": 0,
								"nrql": "SELECT count(*) from TransactionError TIMESERIES facet appName"
							}
						]
					}
				},
				{
					"visualization": {
						"id": "viz.bar"
					},
					"layout": {
						"column": 10,
						"row": 4,
						"height": 3,
						"width": 3
					},
					"title": "Backend Errors - App Services",
					"rawConfiguration": {
						"queries": [
							{
								"accountId": 0,
								"nrql": "FROM Transaction SELECT count(*) facet errorType, appName where errorMessage  IS NOT NULL since 10 minutes ago"
							}
						]
					}
				},
				{
					"visualization": {
						"id": "viz.line"
					},
					"layout": {
						"column": 1,
						"row": 7,
						"height": 3,
						"width": 4
					},
					"title": "CPU % trend by Hostname",
					"rawConfiguration": {
						"queries": [
							{
								"accountId": 0,
								"nrql": "FROM SystemSample SELECT average(cpuPercent) facet hostname TIMESERIES Since 10 minutes ago"
							}
						]
					}
				},
				{
					"visualization": {
						"id": "viz.line"
					},
					"layout": {
						"column": 5,
						"row": 7,
						"height": 3,
						"width": 4
					},
					"title": "Memory % trend by Hostname",
					"rawConfiguration": {
						"queries": [
							{
								"accountId": 0,
								"nrql": "FROM SystemSample SELECT average(memoryUsedBytes/memoryTotalBytes)*100 facet hostname TIMESERIES Since 10 minutes ago"
							}
						]
					}
				},
				{
					"visualization": {
						"id": "viz.line"
					},
					"layout": {
						"column": 9,
						"row": 7,
						"height": 3,
						"width": 4
					},
					"title": "Transfer Rate (Bps)",
					"rawConfiguration": {
						"queries": [
							{
								"accountId": 0,
								"nrql": "FROM NetworkSample SELECT average(transmitBytesPerSecond+receiveBytesPerSecond) facet hostname TIMESERIES "
							}
						]
					}
				}
			]
		}
	]
}
